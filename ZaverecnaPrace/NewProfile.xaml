<Window x:Class="ZaverecnaPrace.NewProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZaverecnaPrace"
        mc:Ignorable="d"
        Title="Profile" Height="300" Width="300" Background="#FF004225">
    <Grid>
        <TextBox x:Name="UserName" HorizontalAlignment="Center" Margin="0,65,0,0" TextWrapping="Wrap" Text="New User Name" VerticalAlignment="Top" Width="200" Height="30" FontWeight="Bold"/>

        <Button x:Name="Create" Content="Create account" HorizontalAlignment="Center" Margin="0,227,0,0" VerticalAlignment="Top" Width="150" Height="30" FontSize="15" Click="Create_Click"/>
        <TextBlock x:Name="errorMsg" HorizontalAlignment="Center" TextWrapping="Wrap" Text="-" VerticalAlignment="Top" Foreground="#FFF2F2F2" Width="200" Height="87" FontSize="16" Margin="0,135,0,0"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="200" Height="30"/>
    </Grid>
</Window>
