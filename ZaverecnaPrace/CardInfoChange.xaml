<Window x:Class="ZaverecnaPrace.CardInfoChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZaverecnaPrace"
        mc:Ignorable="d"
        Title="CardInfoChange" Height="250" Width="500">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE600FF"/>
                <GradientStop Color="#FF670000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="CardInfoName" HorizontalAlignment="Center" Margin="0,33,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="356" Height="35" FontSize="25"/>
        <TextBox x:Name="CardInfoName_Copy" HorizontalAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="356" Height="127" FontSize="10"/>

    </Grid>
</Window>
